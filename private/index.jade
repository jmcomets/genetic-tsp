doctype html
html(data-ng-app='app')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title TSP

    //- CSS
    link(href='/css/bootstrap.min.css', rel='stylesheet')
    link(href='/css/simple-sidebar.css', rel='stylesheet')

    //if lt IE 9
      script(src='//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
      script(src='//oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js')
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.2.0/angular.min.js')
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.2.0/angular-route.js')
  body(data-ng-controller='MainCtrl')
    #wrapper
      //- Sidebar
      #sidebar-wrapper
        ul.sidebar-nav
          li.sidebar-brand
            a(href='/#/home')
              | TSP
          li(data-ng-repeat='(name, cities) in datasets.citymaps',
             data-ng-class='{ active: isActive("/datasets/" + name) }')
            a(href='/#/datasets/{{ name }}')
              | {{ name }}
      //- Page Content
      #page-content-wrapper
        .container-fluid
          div(data-ng-view)
    //- JavaScript 
    script(src='/js/jquery.js')
    script(src='/js/bootstrap.min.js')
    script(src='/js/main.js')
