doctype html
html(data-ng-app='app')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title TSP

    //- CSS
    link(href='/css/bootstrap.min.css', rel='stylesheet')
    //-link(href='/css/simple-sidebar.css', rel='stylesheet')

    //if lt IE 9
      script(src='//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
      script(src='//oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js')
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.2.0/angular.min.js')
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.2.0/angular-route.js')
  body(data-ng-controller='MainCtrl')
    //- Navbar
    .container-fluid
      .navbar.navbar-default
        .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar-collapse')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/#/home')
              | TSP
          #navbar-collapse.navbar-collapse.collapse
            ul.nav.navbar-nav
              li.dropdown
                a.dropdown-toggle(href='/#/dataset-selection', data-toggle='dropdown')
                  | Dropdown
                  span.caret
                ul.dropdown-menu
                  li(data-ng-repeat='(name, _) in datasets.citymaps', data-ng-class='{ active: isActive("/datasets/" + name) }')
                    a(href='/#/datasets/{{ name }}')
                      | {{ name }}
    //- Content
    .container-fluid
      div(data-ng-view)

    //- JavaScript 
    script(src='/js/jquery.js')
    script(src='/js/bootstrap.min.js')
    script(src='/js/main.js')
